#!/usr/bin/env perl
use strict;
use warnings;

use YAML;
use lib "lib/";
use Fallout::Hack;

print "Enter words, one per line\n";

my @words;

while ( my $line = <STDIN> ) {
    chomp $line;
    $line =~ s|\s+.*$||;
    next unless $line;
    last if $line eq ".";
    push @words, $line;
}

unless ( scalar @words == 11 ) {
    die "ERROR: you don't appear to have entered the right number of words (should be 11)";
}

my $length = length $words[0];
for my $word ( @words ) {
    unless ( length $word == $length ) {
        die "ERROR: not all words are the same length, e.g. '$words[0]' vs '$word'"
    }
}

for my $guess ( 1, 2, 3, 4 ) {

    print YAML::Dump Fallout::Hack::score_words( @words );

    my $recommended = Fallout::Hack::recommend_guess( $guess, @words );

    print "\nRecommended: $recommended\n";

    my $results = <STDIN>;
    chomp $results;
    unless ( $results =~ m|^(\w+)\s+(\d)$| ) {
        die "ERROR: could not match\n";
    }

    @words = Fallout::Hack::guess( \@words, $1, $2 );

}

